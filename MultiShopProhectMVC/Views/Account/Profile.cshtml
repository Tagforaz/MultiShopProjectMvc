@using MultiShopProjectMVC.Utilities
@model ProfileDetailsVM

<!-- Contact Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">My Profile</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img src="~/assets/img/@Model.Image" style="width:150px; height:150px; border-radius: 50%;" />
                    </div>
                    <div class="control-group col-lg-6">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" disabled placeholder="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div><br />
                    <div class="control-group col-lg-6">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" disabled placeholder="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div> <br />
                    <div class="control-group col-lg-6">
                        <label asp-for="Birthday">Birthday</label>
                        <input asp-for="Birthday" disabled placeholder="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div><br />
                    <div class="control-group col-lg-12">
                        <label>Gender</label>
                        <div class="gender-options" style="display:flex; gap:15px; margin-top:5px; width: 50px;">
                            <label>Gender</label>
                            <div class="gender-options" style="display:flex; gap:15px; margin-top:5px;">
                                <div style="display:flex; align-items:center;">
                                    <input disabled style="margin-right:5px;" type="radio" name="Gender" value="@((int)Gender.Female)" id="genderFemale" @(Model.Gender == Gender.Female ? "checked" : "") />
                                    <label for="genderFemale"> Female </label>
                                </div>
                                <div style="display:flex; align-items:center;">
                                    <input disabled style="margin-right:5px;" type="radio" name="Gender" value="@((int)Gender.Male)" id="genderMale" @(Model.Gender == Gender.Male ? "checked" : "") />
                                    <label for="genderMale"> Male </label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div> <br />
                    <div class="control-group col-lg-6">
                        <label asp-for="PhoneNumber">Phone number</label>
                        <input asp-for="PhoneNumber" disabled placeholder="Phone number" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div> <br />
                    <div class="control-group col-lg-6">
                        <label asp-for="UserName">Username</label>
                        <input asp-for="UserName" placeholder="Username" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div> <br />
                    <div class="control-group col-lg-6">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" disabled placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div> <br />
                </form>
            </div>
        </div>
    </div>
</div>