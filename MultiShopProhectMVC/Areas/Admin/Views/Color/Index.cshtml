@model List<GetColorVM>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card " style="margin-top:60px;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Color Table</h4>

            <div class="table-responsive">
                <a class="btn btn-success" asp-action="Create"> Create Color </a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (GetColorVM colorVM in Model)
                            {
                                count++;
                            <tr>
                                <td>@count</td>
                                <td>@colorVM.Name</td>

                                <td>
                                    <a asp-action="delete" asp-route-id="@colorVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                    <a asp-action="update" asp-route-id="@colorVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-action="details" asp-route-id="@colorVM.Id" class="btn btn-primary"><i class="fa fa-vcard-o"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>