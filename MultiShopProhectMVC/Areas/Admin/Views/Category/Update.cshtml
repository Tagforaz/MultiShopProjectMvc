@model UpdateCategoryVM
<div class="col-12 grid-margin stretch-card" style="margin-top:60px;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Category</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Image</label>
                    <br />
                    <img src="~/assets/img/@Model.Image" style="width:150px; height:150px;" />
                    <input asp-for="Image" hidden />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Add Photo</label>
                    <br />
                    <input asp-for="Photo" accept="image/*" class="form" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
              

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="index" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>